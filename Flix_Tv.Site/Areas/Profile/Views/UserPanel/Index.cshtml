@section Scripts{
    <script>
        function fullNameChanged() {
            $('#detail-form-submit').removeAttr('disabled');
        }

        $('#form-user-detail').submit(function (e) {
            e.preventDefault();
            var fullNameText = $('#fullname').val();
            $.ajax({
                type: "POST",
                url: "/profile/userpanel/ChangeFullName",
                data: { fullName: fullNameText },
                dataType: "json",
                success: function (res) {
                    if (res == true) {
                        $('#change-fullname-success').removeClass('d-none');
                    }
                    else {
                        $('#change-fullname-error').removeClass('d-none');
                    }
                }
            });
        });

        $('#form-change-password').submit(function (e) {
            e.preventDefault();
            var newPassword = $('#newpass').val();
            var confirmPassword = $('#confirmpass').val();
            var currentPassword = $('#curpass').val();
            if (newPassword == "" || confirmPassword == "" || currentPassword == "") {

                alert('لطفا تمامی مقادیر را وارد کنید');
                return;
            }
            if (newPassword.length > 16 || newPassword.length < 4) {
                alert('رمز باید بین 4 تا 16 حرف باشد');
                return;
            }
            if (newPassword != confirmPassword) {
                alert('رمز عبور و تکرار آن یکسان نیستند');
                return;
            }


            $.ajax({
                type: "POST",
                url: "/profile/userpanel/ChangePassword",
                data: { currentPassword: currentPassword, newPassword: newPassword, reNewPassword: confirmPassword },
                dataType: "json",
                success: function (res) {
                    if (res == false) {
                        alert('خطایی به وجود آمده است');
                    }
                    if (res == "WrongCurrentPassword") {
                        alert('رمز عبور قدیمی را اشتباه وارد کردید');
                    }
                    if (res == true) {
                        window.location.href = "/Login?changed=true";
                    }
                }
            });
        });
    </script>
