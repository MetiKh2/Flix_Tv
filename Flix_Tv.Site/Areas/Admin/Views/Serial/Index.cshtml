                        <div class="main__table-text">@((item.ViewCount==null?"0":item.ViewCount))</div>
                    </td>
                    <td>
                        <div class="main__table-text">@item.AgeRestriction</div>
                    </td>
                    @*<td>
            <div class="main__table-text main__table-text--green">قابل رویت</div>
        </td>*@
