@model List<Flix_Tv.Application.DTOs.Public.GetMediaCategoriesDto>
@{
    ViewData["Title"] = "Genres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section section--head section--head-fixed">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-6">
                <h1 class="section__title section__title--head">ژانر های سینمایی</h1>
            </div>

            <div class="col-12 col-xl-6">
                <ul class="breadcrumb">
                    <li class="breadcrumb__item"><a href="/">صفحه اصلی</a></li>
                    <li class="breadcrumb__item breadcrumb__item--active">ژانر ها</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="section section--pb0">
    <div class="container">
        <div class="row row--grid">

            @foreach (var item in Model.Where(p=>!p.IsSerial))
            {
                <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                    <a href="/movies?categoryId=@item.Id" class="category" style="height:200px;">
                        <div class="category__cover" style="height:100%;">
                            <img src="~/Movies/Categories/ThumbImages/@item.Image" alt="" style="height:100%;">
                        </div>
                        <h3 class="category__title">@item.Title</h3>
                        <span class="category__value">@item.MediaCount</span>
                    </a>
                </div>
            }
        </div>
    </div>
</section>


<section class="section section--pb0">
    <div class="container">
        <div class="col-12">
            <h2 class="section__title"><a>ژانر های سریال</a></h2>
        </div>
        <div class="row row--grid">
            @foreach (var item in Model.Where(p => p.IsSerial))
            {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                <a href="/serials?categoryId=@item.Id" class="category" style="height:200px;">
                    <div class="category__cover" style="height:100%;">
                        <img src="~/Serials/Categories/ThumbImages/@item.Image" alt=""  style="height:100%;">
                    </div>
                    <h3 class="category__title">@item.Title</h3>
                    <span class="category__value">@item.MediaCount</span>
                </a>
            </div>
            }
        </div>
    </div>
</section>
